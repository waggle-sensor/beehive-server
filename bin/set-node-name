#  license.  For more details on the Waggle project, visit:
#           http://www.wa8.gl
# ANL:waggle-license

usage() {
  echo "Usage: node-set-name <partial-node-id> <new-name>"
  echo
}

if [ $# -ne 2 ]; then
  if [ $# -eq 1 ]; then
    if [ "$1" == "--help" ]; then
      usage
      exit 0
    fi
  fi
  echo "ERROR: Invalid number of arguments."
  echo
  usage
  exit 1
fi

node_id_part=${1^^}
name=$2

results=$(docker exec -ti beehive-mysql mysql -u waggle --password=waggle -e "select node_id from nodes where node_id like \"%${node_id_part}\";" waggle | grep "${node_id_part} |" | sed "s/ *| *//g")
result_count=$(echo "$results" | wc -l)
if [ $result_count -eq 0 ]; then
  echo "ERROR: No node ID matches ${node_id_part}."
elif [ $result_count -gt 1 ]; then
  echo "ERROR: More than one node ID matches ${node_id_part}."
else
  node_id=$(echo $results | tr -d '\r')
  echo "Setting name for node ${node_id} to \"${name}\"."
  docker exec -ti beehive-mysql mysql -u waggle --password=waggle -e "update nodes set name=\"${name}\" where node_id=\"${node_id}\""\; waggle
fi
#docker exec -ti beehive-mysql mysql -u waggle --password=waggle -e "select name from nodes where node_id=\"${node_id_part}\";" waggle
# UPDATE nodes SET name = "<name>" WHERE node_id="<node_id>";
